<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toy9986619.finalexam.IBW_Activity">

    <EditText
        android:id="@+id/ibw_height"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="169dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="226dp"
        android:gravity="center_vertical"
        android:text="kg"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ibw_weight"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ibw_range2"
        android:layout_width="115dp"
        android:layout_height="29dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:text=" ?? kg"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/map_rangetext"
        tools:layout_editor_absoluteY="388dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:text="Find Your Ideal Body Weight"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:text="Select your gender"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/map_calculate"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="249dp"
        android:onClick="Result"
        android:text="Calculate IBW"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:text="Your BW is :"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_calculate" />

    <TextView
        android:id="@+id/map_rangetext"
        android:layout_width="197dp"
        android:layout_height="34dp"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="94dp"
        android:gravity="center_vertical"
        android:text="Normal Range of Your BW"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/ibw_kg"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text=" ??.?kg"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/map_range1"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="14dp"
        android:text=" ?? kg"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_rangetext"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="~"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/map_range1"
        app:layout_constraintTop_toTopOf="@+id/map_range1" />

    <Button
        android:id="@+id/map_send"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="70dp"
        android:onClick="send"
        android:text="Send Mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/ibw_exit"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="0dp"
        android:onClick="Exit"
        android:text="Return"
        app:layout_constraintLeft_toLeftOf="@+id/map_send"
        app:layout_constraintTop_toTopOf="@+id/map_send" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Body Height:"
        android:layout_marginTop="169dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="169dp"
        android:text="cm"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="268dp"
        android:layout_height="37dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="119dp"
        android:orientation='horizontal'
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/ibw_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/ibw_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="122dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="24dp"
        android:text="Your Body Weight:"
        app:layout_constraintLeft_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

</android.support.constraint.ConstraintLayout>
