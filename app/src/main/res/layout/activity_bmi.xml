<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toy9986619.finalexam.BMI_Activity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="131dp"
        android:gravity="center_vertical"
        android:text="kg"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bmi_height"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bmi_weight"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="54dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:text="Find Your Body Mass"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/map_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="171dp"
        android:onClick="Result"
        android:text="Calculate BMI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:text="Your BMI is :"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_calculate" />

    <TextView
        android:id="@+id/map_rangetext"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="Your BMI is in xxxxx range"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/bmi_result"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text=" ??.? "
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/map_range1"
        android:layout_width="212dp"
        android:layout_height="36dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="15dp"
        android:text="( ??.? ~ ??.? )"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_rangetext" />

    <Button
        android:id="@+id/map_send"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginBottom="92dp"
        android:layout_marginLeft="140dp"
        android:onClick="send"
        android:text="Send Mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bmi_exit"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:onClick="Exit"
        android:text="Return"
        app:layout_constraintLeft_toLeftOf="@+id/map_send"
        app:layout_constraintTop_toBottomOf="@+id/map_send" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Body Height:"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="75dp"
        android:gravity="center_vertical"
        android:text="m"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="122dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="39dp"
        android:text="Your Body Weight:"
        app:layout_constraintLeft_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

</android.support.constraint.ConstraintLayout>
